{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "rmsconsumerrc",
    "labels": {
      "name": "rmsconsumer"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": "rmsconsumer"
    },
    "template": {
      "metadata": {
        "name": "rmsconsumer",
        "labels": {
          "name": "rmsconsumer"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "rmsconsumer",
            "image": "xutaomac/tasker",
			"volumeMounts": [
				{
				"name": "volume2",
				"mountPath": "/data/workspace/cdscp"
				}
			],
			"workingDir": "/data/workspace/cdscp/tasker/",
			"command": ["/bin/sh", "-c", "python taskconsumer.py test"],
			"env": [
				{
					"name": "MY_POD_NAME",
					"valueFrom": {
						"fieldRef": {
							"fieldPath": "metadata.name"
							}
					}
				},
				{
					"name": "TEST",
					"value": "v111"
				}
			],	
            "ports": [
              {
                "name": "http",
                "containerPort": 8888,
                "protocol": "TCP"
              }
            ]
          }
        ],
		"volumes": [
                {
                    "name": "volume2",
                    "hostPath":{
                        "path": "/root/trunk/cdscp"
                	}
				}
            ]
      }
    }
  }
}
